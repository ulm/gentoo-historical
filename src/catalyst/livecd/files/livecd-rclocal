depend() {
	after *
}

start() {
	ebegin "Auto-scrambling root password for security"
	echo root:\`pwgen -s 16\` | chpasswd  > /dev/null 2>&1
	eend $? "Failed to start local."
}

stop() {
	ebegin "Stopping local"
	eend $? "Failed to stop local."
}
