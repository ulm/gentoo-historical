# host info
IFACE="eth1"
MY_ADDR="10.1.7.1/32 10.1.7.2/32"

# server info
#SERVER_TYPE="web"
#SERVER_TYPE="ftp"
#SERVER_TYPE="web ftp rsync"
SERVER_TYPE="rsync"
RSYNC_MIRRORS="
    216.176.132.235 202.157.182.60
    158.36.2.10 210.193.6.237 
    81.223.20.162 217.172.182.32
    193.136.164.248 199.108.109.25
    172.16.200.0/24 216.223.235.2"   

# custom accept rules (accepts optional source address/mask:port)
# applied before server-related ones

IN_ICMP_TYPES="0/0:8 0/0:11"
IN_TCP_PORTS="192.168.0.1/32:22 80"
IN_UDP_PORTS="123 10.1.7.2:53"

OUT_ICMP_TYPES="3/4"
OUT_TCP_PORTS="20 21 22 25 80 rsync1.us.gentoo.org:873"
OUT_UDP_PORTS="53 123"

# custom drop rules (accepts optional destination address/mask:port)
# applied before server-related ones

DROP_IN_ICMP_TYPES=""
DROP_IN_TCP_PORTS="10.1.7.100:80"
DROP_IN_UDP_PORTS=""

DROP_OUT_ICMP_TYPES=""
