  <task lead="iElectric">
    <name>g-pypi</name>
    <description>Create ebuilds from PyPI automatically</description>
    <longdescription>
      <p>
        <uri link="https://github.com/iElectric/g-pypi/">g-pypi</uri> is a tool for
        installing Python packages using information from
        <uri link="http://pypi.python.org/pypi">PyPI</uri> without having to
        write an ebuild by hand. You can read more about the tool
		<uri link="http://g-pypi.readthedocs.org/en/latest/">here</uri>
      </p>
      <p>
        Feature requests and bug reports for the git code should go to
        <uri>https://github.com/iElectric/g-pypi/</uri>
	</p>
    </longdescription>
    <startdate>2007</startdate>
    <dev role="Developer">pythonhead</dev>
    <dev role="Developer">neurogeek</dev>
  </task>

  <task lead="mgorny">
    <name>python-r1</name>
    <description>Simpler &amp; cleaner eclasses for Python packages</description>
    <longdescription>
      <p>
        python-r1 &amp; distutils-r1 are the new eclasses being developed
        with a goal of providing a simpler and more maintainable replacement
        for the current python &amp; distutils eclasses.
      </p>
    </longdescription>
    <startdate>2012</startdate>
    <dev role="Developer">mgorny</dev>
  </task>

  <extraproject name="eselect-python">
    Python eselect module
  </extraproject>

  <extraproject name="python-exec"
      link="https://bitbucket.org/mgorny/python-exec" lead="mgorny">
    A wrapper to run the Python script variant for the preferred implementation
  </extraproject>

  <extraproject name="python-updater">
    Re-emerges Python packages after a major Python upgrade
  </extraproject>

